---
interface Props {
  eyebrow?: string;
  title: string;
  subtitle?: string;
  center?: boolean;
}

const { eyebrow, title, subtitle, center = false } = Astro.props;
---
<div class={`mb-10 md:mb-12 ${center ? 'text-center' : 'text-left'} max-w-2xl`}>
  {eyebrow && (
    <div class="chip mb-4 inline-flex">
      {eyebrow}
    </div>
  )}
  <h2 class="text-3xl md:text-4xl font-semibold tracking-tight">
    {title}
  </h2>
  {subtitle && (
    <p class="mt-4 text-sm md:text-base text-foreground/70">
      {subtitle}
    </p>
  )}
</div>
