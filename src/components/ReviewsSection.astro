---
import Section from './Section.astro';

interface Review {
  quote: string;
  name: string;
  label?: string;
}

interface Props {
  reviews: Review[];
}

const { reviews } = Astro.props;
if (!reviews?.length) {
  return null;
}
---
<Section id="reviews" tone="accent">
  <div class="mb-8 max-w-xl sr">
    <h2 class="text-3xl md:text-4xl font-semibold tracking-tight text-white">
      Recenzie klientov
    </h2>
    <p class="mt-3 text-sm text-white/70">
      Dlhodobé vzťahy sú pre nás dôležitejšie ako rýchly strih. Toto sú slová
      ľudí, ktorí sa k nám vracajú.
    </p>
  </div>

  <div class="grid gap-5 md:grid-cols-3">
    {reviews.map((review, index) => (
      <figure
        class="sr flex h-full flex-col rounded-2xl border border-white/15 bg-white/5 p-5 text-sm"
        style={`transition-delay: ${70 + index * 70}ms;`}
      >
        <blockquote class="flex-1 text-xs text-white/85">
          {review.quote}
        </blockquote>
        <figcaption class="mt-3 text-xs">
          <div class="font-semibold text-white">
            {review.name}
          </div>
          {review.label && (
            <div class="text-[11px] text-white/70">{review.label}</div>
          )}
        </figcaption>
      </figure>
    ))}
  </div>
</Section>
